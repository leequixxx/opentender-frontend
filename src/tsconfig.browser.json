{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "es2015",
		"baseUrl": "./",
		"types": [],
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2015",
			"dom"
		]
	},
	"angularCompilerOptions": {
		"fullTemplateTypeCheck": true
	},
	"exclude": [
		"test.ts",
		"**/*.spec.ts",
		"src/server/**/*",
		"server/**/*"
	]
}
